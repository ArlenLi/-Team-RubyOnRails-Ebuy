
<dl class="dl-horizontal">
  <dt> Name:</dt>
  <dd><%= @product.name %></dd>
  <dt> Unit price:</dt>
  <dd><%= @product.price %></dd>
  <dt> Quantity:</dt>
  <dd><%= @cart_product.quantity %></dd>
  <dt> Total Price:</dt>
  <dd><%= @product.price * @cart_product.quantity %></dd>
</dl>
<div class="btn-toolbar" role="toolbar" >
  <div class="btn-group" role="group" aria-label="Checkout">
    <%= link_to 'Check out', '/orders/new?productId='+ @product.id + '&amount='+ @cart_product.quantity, class: "btn btn-info"%>
  </div>
  <div class="btn-group" role="group" aria-label="Back">
    <%= link_to 'Back', @product, class: "btn btn-info"%>
  </div>
</div>
